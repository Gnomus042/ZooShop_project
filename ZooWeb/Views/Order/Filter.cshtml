@model ZooWeb.Models.OrdersFilter



@using (Html.BeginForm("Filter", "Order", FormMethod.Post))
{
<div class="form-horizontal">
    <div class="form-group">

        @Html.EditorFor(model => model.useClient) 
        @Html.LabelFor(model => model.useClient, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.client, ViewBag.Clients as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>  
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>

</div>
}