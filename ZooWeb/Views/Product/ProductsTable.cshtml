@model IEnumerable<ZooDataLibrary.Products>

@{
    ViewBag.Title = "Products";
}

<div class="col-md-12">
    <div class="col-md-10">
        <h2>Products</h2>
    </div>
    <div class="col-md-2">
        <br />
        @Html.ActionLink("Create", "Create", "Product", htmlAttributes: new { @class = "btn btn-primary"})
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-3">
        @Html.Partial("Filter", ViewBag.filter as ZooWeb.Models.FilterModel, new ViewDataDictionary(this.ViewData))
    </div>
    <div class="col-md-9">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anim_kind)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product_kind)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalKinds.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductKinds.Kind)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
    }

        </table>
    </div>
</div>